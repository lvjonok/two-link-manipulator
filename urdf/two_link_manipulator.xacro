<?xml version="1.0"?>
<robot name="two_link_manipulator" xmlns:xacro="http://wiki.ros.org/xacro">

    <xacro:property name="DEG2RAD" value="0.017453292519943295"/>

    <macro name="box_link" params="name xyz rpy size">
        <link name="${name}">
            <visual>
                <origin xyz="${xyz}" rpy="${rpy}"/>
                <geometry>
                    <box size="${size}"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="${xyz}" rpy="${rpy}"/>
                <geometry>
                    <box size="${size}"/>
                </geometry>
            </collision>
            <inertia>
                <origin xyz="${xyz}" rpy="${rpy}"/>
                <mass value="1"/>
                <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
            </inertia>
        </link>
    </macro>
    <macro name="revolute_joint" params="name xyz rpy parent child axis lower upper vel">
        <joint name="${name}" type="revolute">
            <origin xyz="${xyz}" rpy="${rpy}"/>
            <parent link="${parent}"/>
            <child link="${child}"/>
            <axis xyz="${axis}"/>
            <limit effort="100" lower="${lower}" upper="${upper}" velocity="${vel}"/>
            <dynamics damping="5" friction="10"/>
        </joint>
    </macro>

    <link name="world"/>
    <box_link name="base_link" xyz="0 0 0.5" rpy="0 0 0" size="0.2 0.2 1"/>
    <box_link name="link1" xyz="0 0 0.3" rpy="0 0 0" size="0.05 0.05 0.6"/>
    <box_link name="link2" xyz="0 0 0.1625" rpy="0 0 0" size="0.05 0.05 0.375"/>

    <joint name="base_world" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="world"/>
        <child link="base_link"/>
    </joint>

    <revolute_joint name="joint1" xyz="0 0.125 0.95" rpy="0 ${DEG2RAD * 90} 0" parent="base_link" child="link1" axis="0 1 0"
                    lower="${-DEG2RAD * 179.9}" upper="${DEG2RAD * 180}" vel="1"/>

    <revolute_joint name="joint2" xyz="0 0.05 0.575" rpy="0 0 0" parent="link1" child="link2" axis="0 1 0"
                    lower="${-DEG2RAD * 179.9}" upper="${DEG2RAD * 180}" vel="1"/>

    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so"/>
    </gazebo>

</robot>
